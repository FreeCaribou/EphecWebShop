@model IEnumerable<EphecWebProject.Models.DataModel.DetailCommande>
@{
    decimal prixTotalCommande = 0;
}
<table class="table">
    <tr>
        <th>
            Article
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DCOM_Quantite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DCOM_PrixUnitaire)
        </th>
        <th>

        </th>
      
    </tr>

@foreach (var item in Model) {
    <tr>
        @{
            decimal prixTotalArticle = item.DCOM_Quantite * item.DCOM_PrixUnitaire;
            prixTotalCommande += prixTotalArticle;
        }
        <td>
            @Html.DisplayFor(modelItem => item.Article.ART_Libelle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DCOM_Quantite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DCOM_PrixUnitaire)
        </td>
        <td>
            @prixTotalArticle euros
        </td>
    </tr>
}

</table>

<h3>Prix Total de la commande:</h3>
<p>@prixTotalCommande euros</p>
