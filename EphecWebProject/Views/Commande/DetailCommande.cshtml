@model EphecWebProject.Models.DataModel.Commande

@{
    ViewBag.Title = "Detail de la commande";
}

<h2>Detail de la commande</h2>

<div id="listeArticleCommande">
    @{
        Html.RenderAction("ListeArticleCommande", "Commande", new { idCommande = Model.COM_Id });
    }
</div>

